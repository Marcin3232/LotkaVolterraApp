<Window x:Class="LotkaVolterraApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:LotkaVolterraApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" 
        
        WindowStartupLocation="CenterScreen" AllowsTransparency="True"
        Background="{x:Null}">
    <Grid>

        <materialDesign:Card Margin="10" Background="#050843" UniformCornerRadius="40">
            <StackPanel >
                <Grid>
                    <Button Background="{x:Null}" Style="{StaticResource BtnNavi}"
                            HorizontalAlignment="Right" x:Name="BtnMinimalize">
                        <StackPanel Orientation="Horizontal">
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

    </Grid>
</Window>
